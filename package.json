{
  "name": "remix-tailwind-starter",
  "version": "1.0.0",
  "description": "A Remix.run starter with tailwind 2 configured",
  "keywords": [
    "remix.run",
    "tailwind",
    "postcss"
  ],
  "repository": "mcansh/remix-tailwind-starter",
  "license": "MIT",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh/)",
  "main": "server.js",
  "scripts": {
    "build": "yarn run build:css && remix build && tsc -b",
    "build:css": "postcss styles --base styles --dir app/ --env production",
    "dev": "concurrently --names \"css,remix,server,loaders\" --prefix-colors \"cyan,magenta,green,red\" \"npm run dev:css\" \"npm run dev:remix\" \"npm run dev:server\" \"npm run dev:loaders\"",
    "dev:server": "cross-env NODE_ENV=development node-dev server.js --ignore app --ignore build --notify false",
    "dev:remix": "cross-env NODE_ENV=development remix run",
    "dev:loaders": "tsc -b -w",
    "dev:css": "postcss styles --base styles --dir app/ -w",
    "start": "node server.js"
  },
  "dependencies": {
    "@remix-run/cli": "0.7.0",
    "@remix-run/core": "0.7.0",
    "@remix-run/express": "0.7.0",
    "@remix-run/loader": "0.7.0",
    "@remix-run/react": "0.7.0",
    "cross-env": "7.0.2",
    "express": "4.17.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-router": "6.0.0-beta.0",
    "react-router-dom": "6.0.0-beta.0"
  },
  "devDependencies": {
    "@types/node": "14.14.9",
    "@types/react": "16.9.56",
    "@types/react-dom": "16.9.9",
    "autoprefixer": "10.0.2",
    "concurrently": "5.3.0",
    "node-dev": "6.2.0",
    "postcss": "8.1.8",
    "postcss-cli": "8.3.0",
    "tailwindcss": "2.0.1",
    "typescript": "4.1.2"
  },
  "engines": {
    "node": ">=12"
  }
}
