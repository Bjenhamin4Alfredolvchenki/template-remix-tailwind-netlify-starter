{
  "name": "remix-tailwind-starter",
  "version": "1.0.0",
  "description": "A Remix.run starter with tailwind 2 configured",
  "keywords": [
    "remix.run",
    "tailwind",
    "postcss"
  ],
  "repository": "mcansh/remix-tailwind-starter",
  "license": "MIT",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh/)",
  "main": "server.js",
  "scripts": {
    "build": "yarn run build:css && remix build && tsc -b",
    "build:css": "postcss styles --base styles --dir app/ --env production",
    "dev": "concurrently --names \"css,remix,server\" --prefix-colors \"cyan,magenta,green\" \"npm run dev:css\" \"remix run\" \"tsc -b -w\" \"cross-env NODE_ENV=development nodemon -w app -w loaders -e js,ts,tsx server.js\"",
    "dev:css": "postcss styles --base styles --dir app/ -w",
    "start": "node server.js"
  },
  "dependencies": {
    "@remix-run/cli": "0.7.0",
    "@remix-run/core": "0.7.0",
    "@remix-run/express": "0.7.0",
    "@remix-run/loader": "0.7.0",
    "@remix-run/react": "0.7.0",
    "@types/node": "14.14.8",
    "@types/react": "16.9.56",
    "@types/react-dom": "16.9.9",
    "concurrently": "5.3.0",
    "cross-env": "7.0.2",
    "express": "4.17.1",
    "nodemon": "2.0.6",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-router": "6.0.0-beta.0",
    "react-router-dom": "6.0.0-beta.0",
    "typescript": "4.0.5"
  },
  "devDependencies": {
    "autoprefixer": "10.0.2",
    "postcss": "8.1.7",
    "postcss-cli": "8.3.0",
    "tailwindcss": "2.0.0"
  },
  "engines": {
    "node": ">=12"
  }
}
